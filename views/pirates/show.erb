<h1>Pirate</h1>

<div class="student">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Height: <%= @pirate.height %></h4><br>
  <h4>Weight: <%= @pirate.weight %></h4>
</div><br>

<h1>Courses</h1>
<% @courses.each do |course| %>
  <div class="course">
    <p>Name: <%= course.name %></p><br>
    <p>Topic: <%= course.topic %></p><br>
  </div><br>
<% end %>
